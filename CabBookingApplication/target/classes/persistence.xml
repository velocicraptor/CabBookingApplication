<?xml version="1.0" encoding="UTF-8"?>
<persistence 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	
	<persistence-unit name="cab_booking_application" transaction-type="RESOURCE_LOCAL">
		<class>com.cg.mts.entities.AbstractUser</class>
		<class>com.cg.mts.entities.Admin</class>
		<class>com.cg.mts.entities.Cab</class>
		<class>com.cg.mts.entities.Customer</class>
		<class>com.cg.mts.entities.Driver</class>
		<class>com.cg.mts.entities.TripBooking</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/cghybris"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="javax.persistence.jdbc.password" value="root"/>
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
			<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.hbm2ddl.auto" value="create"/>
		</properties>
		
	</persistence-unit>
	
</persistence>